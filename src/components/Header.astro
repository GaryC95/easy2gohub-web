---
import { tools } from "../data/tools";
---
<header class="sticky top-0 z-40 px-8 py-4 glass border-b border-slate-200/30 flex items-center justify-between gap-8">
  <div class="flex-1 max-w-2xl relative">
    <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-400">search</span>
    <input id="toolSearch"
      class="w-full bg-slate-100/50 border-transparent focus:ring-2 focus:ring-indigo-500/20 focus:bg-white transition-all rounded-xl pl-12 pr-4 py-2.5 text-sm"
      placeholder="Search tools (e.g. compress, json)..."
      type="text"
      autocomplete="off"
    />
  </div>
  <div class="flex items-center gap-4">
    <a class="bg-indigo-600 text-white text-sm font-bold px-5 py-2 rounded-xl shadow-lg shadow-indigo-600/20 hover:shadow-indigo-600/30 transition-all"
       href="/tools/">
      All Tools
    </a>
  </div>

  <script type="module">
    const input = document.getElementById("toolSearch");
    const cards = () => Array.from(document.querySelectorAll("[data-tool-card]"));

    function norm(s){ return (s||"").toLowerCase().trim(); }

    input?.addEventListener("input", () => {
      const q = norm(input.value);
      for (const el of cards()){
        const hay = norm(el.getAttribute("data-search") || "");
        el.classList.toggle("hidden", q && !hay.includes(q));
      }
    });
  </script>
</header>
