---
import { CATEGORY_LABEL, tools } from "../data/tools";
const currentPath = Astro.url.pathname;

const categories = Object.entries(CATEGORY_LABEL).map(([key, label]) => {
  const list = tools.filter(t => t.category === key);
  return { key, label, list };
});
---

<aside class="w-[var(--sidebar-width)] flex-shrink-0 glass border-r border-slate-200/50 flex flex-col z-50">
  <div class="p-6 flex items-center gap-3 border-b border-slate-200/30">
    <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-fuchsia-500 rounded-lg flex items-center justify-center text-white">
      <span class="material-symbols-outlined !text-xl">hub</span>
    </div>
    <a href="/" class="font-bold text-lg tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-slate-900 to-slate-600">
      Easy2GoHub
    </a>
  </div>

  <nav class="flex-1 overflow-y-auto p-4 space-y-4">
    <div>
      <div class="text-[10px] uppercase font-bold text-slate-400 px-3 mb-2 tracking-widest">Explorer</div>

      {categories.map(cat => (
        <div class="mb-3">
          <button class="flex items-center w-full px-3 py-2 text-sm font-medium text-slate-700 hover:text-indigo-600 transition-colors tree-item rounded-md group"
                  data-tree-toggle>
            <span class="material-symbols-outlined mr-2 text-slate-400 group-hover:text-indigo-600 transition-colors">keyboard_arrow_down</span>
            <span class="material-symbols-outlined mr-2 text-indigo-500">folder</span>
            {cat.label}
          </button>

          <div class="ml-9 mt-1 space-y-1" data-tree-panel>
            {cat.list.map(t => {
              const href = `/${t.category}/${t.slug}/`;
              const active = currentPath === href;
              return (
                <a class={`block px-3 py-1.5 text-xs border-l transition-all ${
                  active
                    ? "text-indigo-600 border-indigo-500 font-bold"
                    : "text-slate-500 border-slate-200 hover:text-indigo-600 hover:border-indigo-500"
                }`} href={href}>
                  {t.title}
                </a>
              );
            })}
          </div>
        </div>
      ))}
    </div>
  </nav>

  <div class="p-4 border-t border-slate-200/30">
    <div class="p-3 bg-indigo-50/50 rounded-xl border border-indigo-100 flex items-center gap-3">
      <div class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center">
        <span class="material-symbols-outlined text-indigo-600 text-sm">person</span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-xs font-bold truncate">Pro Workspace</p>
        <p class="text-[10px] text-slate-400">Coming later</p>
      </div>
    </div>
  </div>

  <script>
    // Sidebar tree toggle (no framework)
    document.addEventListener("click", (e) => {
      const btn = e.target?.closest?.("[data-tree-toggle]");
      if (!btn) return;
      const panel = btn.parentElement?.querySelector?.("[data-tree-panel]");
      if (!panel) return;
      panel.classList.toggle("hidden");
      const icon = btn.querySelector(".material-symbols-outlined");
      if (icon) icon.classList.toggle("rotate-[-90deg]");
    });
  </script>
</aside>
