---
const { href, icon, title, description, tags, search } = Astro.props;
---
<a class="tool-card glass p-6 rounded-2xl border border-white flex flex-col gap-4 group"
   href={href}
   data-tool-card
   data-search={search}>
  <div class="w-12 h-12 bg-indigo-600/10 rounded-xl flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-all">
    <span class="material-symbols-outlined !text-3xl">{icon}</span>
  </div>
  <div>
    <h3 class="font-bold text-lg mb-1 group-hover:text-indigo-600 transition-colors">{title}</h3>
    <p class="text-sm text-slate-500">{description}</p>
  </div>
  <div class="flex gap-2 mt-auto pt-2 flex-wrap">
    {tags?.map((t) => (
      <span class="px-2 py-1 bg-slate-100 text-[10px] font-bold text-slate-500 rounded uppercase tracking-wider">{t}</span>
    ))}
  </div>
</a>
