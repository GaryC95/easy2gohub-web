---
import "../styles/global.css";

const {
  title = "Easy2GoHub – Free Image Tools (Fast & Private)",
  description = "Free online image tools for compression, resizing, and format conversion. Fast, private, and processed locally in your browser.",
  canonical,
} = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical ? <link rel="canonical" href={canonical} /> : null}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@300..700&display=swap"
      rel="stylesheet"
    />

    <style>
      .material-symbols-outlined {
        font-variation-settings: "FILL" 0, "wght" 500, "GRAD" 0, "opsz" 24;
        line-height: 1;
      }
    </style>
  </head>

  {/* ✅ 关键：不要 overflow-hidden，否则 footer 永远不可达 */}
  <body class="text-slate-900 min-h-screen">
    <slot />

    {/* Global Footer (AdSense-friendly) */}
    <footer class="border-t border-white/40 bg-white/40">
      <div class="max-w-7xl mx-auto px-6 py-6 flex flex-col md:flex-row gap-4 items-center justify-between text-xs text-slate-500">
        <div class="font-semibold">
          © {new Date().getFullYear()} Easy2GoHub
        </div>

        <nav class="flex items-center gap-4 font-semibold">
          <a href="/about/" class="hover:text-slate-700">About</a>
          <a href="/privacy-policy/" class="hover:text-slate-700">Privacy Policy</a>
          <a href="/terms/" class="hover:text-slate-700">Terms</a>
        </nav>
      </div>
    </footer>
  </body>
</html>
