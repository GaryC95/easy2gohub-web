---
import BaseLayout from "./BaseLayout.astro";
import AppSidebar from "../components/ui/AppSidebar.astro";
import AdsSlot from "../components/ads/AdsSlot.astro";

const { title, description } = Astro.props;
---

<BaseLayout title={`${title} - Easy2GoHub`} description={description}>
  <div class="flex h-screen overflow-hidden">
    <AppSidebar />

    <main class="flex-1 flex flex-col overflow-y-auto">
      <header class="sticky top-0 z-40 px-8 py-4 glass border-b border-slate-200/30 flex items-start justify-between gap-8">
        <div>
          <h1 class="text-3xl font-extrabold">{title}</h1>
          <p class="text-slate-500">{description}</p>
        </div>
      </header>

      <div class="flex-1 p-8 flex gap-8 max-w-7xl mx-auto w-full">
        <div class="flex-1 space-y-8">
          <slot />
          <slot name="ads-below-tool">
            <AdsSlot label="Sponsored" />
          </slot>
        </div>

        <aside class="w-80 space-y-6">
          <slot name="settings" />
          <slot name="ads-right">
            <AdsSlot label="Sponsored" />
          </slot>
        </aside>
      </div>
    </main>
  </div>
</BaseLayout>
