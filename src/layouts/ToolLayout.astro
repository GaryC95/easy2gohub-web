---
import AppSidebar from "../components/ui/AppSidebar.astro";
import AdsSlot from "../components/ads/AdsSlot.astro";

const { title, description } = Astro.props;
---

<div class="flex h-screen overflow-hidden">
  <AppSidebar />

  <main class="flex-1 flex flex-col overflow-y-auto">
    <header class="px-8 py-4 border-b bg-white/80 backdrop-blur z-40 sticky top-0">
      <h1 class="text-3xl font-extrabold">{title}</h1>
      <p class="text-slate-500">{description}</p>
    </header>

    <div class="flex-1 p-8 flex gap-8 max-w-7xl mx-auto w-full">
      <!-- 主工具区域 -->
      <div class="flex-1 space-y-8 min-w-0">
        <slot />

        <slot name="ads-below-tool">
          <AdsSlot label="Sponsored" />
        </slot>
      </div>

      <!-- 右侧 Settings -->
      <aside class="w-80 space-y-6 flex-shrink-0">
        <slot name="settings" />
        <slot name="ads-right">
          <AdsSlot label="Sponsored" />
        </slot>
      </aside>
    </div>

    <footer class="border-t px-8 py-4 text-xs text-slate-400 flex justify-between">
      <span>© 2026 Easy2GoHub</span>
      <span>All systems operational</span>
    </footer>
  </main>
</div>
