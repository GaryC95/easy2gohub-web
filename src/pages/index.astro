---
import ToolLayout from "../layouts/ToolLayout.astro";
import ToolSeoBlock from "../components/seo/ToolSeoBlock.astro";
import AdsSlot from "../components/ads/AdsSlot.astro";
import { CATEGORY_ORDER, CATEGORY_META, getToolsByCategory } from "../data/tools";

const title = "Easy2GoHub - Free Online Tools (Fast & Private)";
const description =
  "Free online tools for images, PDFs, files, and text. Fast and private. No upload required.";
const canonical = "https://www.easy2gohub.com/";

const seo = {
  intro:
    "Fast, private tools that run locally in your browser — compress images, merge PDFs, format JSON, generate hashes and more. No uploads, no waiting.",
  steps: [
    "Choose a category from the left sidebar.",
    "Open a tool and adjust settings if needed.",
    "Download your result instantly.",
  ],
  tips: [
    "Local processing: your files stay on your device.",
    "Simple UI: fewer clicks, faster results.",
    "New tools can be added without changing the layout.",
  ],
  faq: [
    { q: "Is it free?", a: "Yes. The tools run in your browser and are free to use." },
    { q: "Are my files uploaded?", a: "No. Tools process locally on your device." },
  ],
};
---

<ToolLayout title={title} description={description} canonical={canonical} adsProfile="default">
  <section class="tool-card p-10 md:p-12">
    <div class="grid lg:grid-cols-12 gap-10 items-start">
      <div class="lg:col-span-7 space-y-5">
        <h1 class="ty-h1 text-4xl md:text-5xl text-slate-900">
          Fast, private tools — right in your browser.
        </h1>

        <p class="ty-body text-base md:text-lg">
          Compress images, merge PDFs, format JSON, generate hashes — all locally. No uploads.
        </p>

        <div class="flex gap-3 flex-wrap">
          <a
            href="/tools/"
            class="inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-primary text-white text-sm ty-ui shadow-lg shadow-primary/25 hover:shadow-primary/35 transition"
          >
            <span class="material-symbols-outlined text-base">apps</span>
            Browse all tools
          </a>

          <a
            href="/image/image-compressor/"
            class="inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-white/60 border border-white/50 text-sm ty-ui text-slate-900 hover:text-primary hover:bg-white/80 transition"
          >
            <span class="material-symbols-outlined text-base text-slate-400">compress</span>
            Try Image Compressor
          </a>
        </div>
      </div>

      <div class="lg:col-span-5 space-y-4">
        <AdsSlot label="Sponsored" variant="banner" />
        <AdsSlot label="Sponsored" height="h-40" />
      </div>
    </div>
  </section>

  <section class="tool-card p-8 md:p-10">
    <div class="flex items-end justify-between gap-6 mb-6">
      <h2 class="ty-h2 text-xl md:text-2xl text-slate-900">Explore categories</h2>
      <p class="ty-body text-sm hidden md:block">Pick a category — then choose a tool inside.</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      {CATEGORY_ORDER.map((cat) => {
        const meta = CATEGORY_META[cat];
        const list = getToolsByCategory(cat);
        const top = list.slice().sort((a, b) => (a.order ?? 999) - (b.order ?? 999)).slice(0, 3);

        return (
          <a
            href={`/${cat}/`}
            class="tool-card tool-card-hover p-6 rounded-2xl"
          >
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="size-11 rounded-2xl bg-primary/10 text-primary flex items-center justify-center glow-soft">
                  <span class="material-symbols-outlined">{meta.icon}</span>
                </div>

                <div class="min-w-0">
                  <div class="ty-ui text-slate-900 truncate">{meta.label}</div>
                  <div class="text-[11px] font-medium tracking-wide text-slate-400">
                    {list.length} tools
                  </div>
                </div>
              </div>

              <span class="material-symbols-outlined text-slate-300">arrow_right_alt</span>
            </div>

            <p class="ty-body text-sm mt-3">
              {meta.desc}
            </p>

            {top.length ? (
              <div class="mt-4 flex flex-wrap gap-2">
                {top.map((t) => (
                  <span class="text-xs font-medium text-slate-600 bg-white/60 border border-white/50 px-2.5 py-1 rounded-full">
                    {t.title}
                  </span>
                ))}
              </div>
            ) : null}
          </a>
        );
      })}
    </div>
  </section>

  <ToolSeoBlock title="Easy2GoHub" seo={seo} showAds={true} adsProfile="default" />
</ToolLayout>
