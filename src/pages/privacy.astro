---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
const title = "Privacy Policy - Easy2GoHub";
const description = "Easy2GoHub processes files locally in your browser. No uploads by default.";
---
<BaseLayout title={title} description={description}>
  <div class="max-w-3xl mx-auto p-8 space-y-4">
    <h1 class="text-3xl font-extrabold">Privacy Policy</h1>
    <p class="text-slate-600">
      Easy2GoHub is designed to run tools locally in your browser. By default, your files are not uploaded to our servers.
    </p>
    <p class="text-slate-600">
      We may use analytics and ads in the future. This policy will be updated accordingly.
    </p>
    <a class="text-indigo-600 font-bold" href="/">Back to Home</a>
  </div>
</BaseLayout>
