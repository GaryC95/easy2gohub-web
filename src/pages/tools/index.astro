---
import ToolLayout from "../../layouts/ToolLayout.astro";
import { tools } from "../../data/tools";

const title = "All Tools";
const description = "Browse all available tools on Easy2GoHub.";
const canonical = "https://www.easy2gohub.com/tools/";
---

<ToolLayout title={title} description={description} canonical={canonical} adsProfile="light">
  <section class="space-y-6">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {tools.map((tool) => (
        <a
          href={`/${tool.category}/${tool.slug}/`}
          class="tool-card p-6 hover:scale-[1.02] transition"
        >
          <div class="flex items-center gap-3">
            <span class="material-symbols-outlined text-primary">
              {tool.icon}
            </span>
            <h3 class="font-extrabold text-slate-900">
              {tool.title}
            </h3>
          </div>
          <p class="text-sm text-slate-500 mt-2">
            {tool.description}
          </p>
        </a>
      ))}
    </div>

    {/* SEO 加分段落 */}
    <div class="tool-card p-8 mt-10">
      <h2 class="text-xl font-extrabold text-slate-900">
        Privacy-First Online Tools
      </h2>
      <p class="text-slate-600 mt-3 leading-relaxed">
        All tools on Easy2GoHub run directly in your browser whenever possible.
        Your files stay on your device and are not uploaded to any server.
        We focus on speed, simplicity, and privacy-first design.
      </p>
    </div>
  </section>
</ToolLayout>
